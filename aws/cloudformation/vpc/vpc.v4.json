  "Resources" : {     
      
    "WebServerInstance": {  
      "Type": "AWS::EC2::Instance",
      "Metadata" : {
        "AWS::CloudFormation::Init" : {
          "configSets" : {
            "InstallAndRun" : [ "Install", "Configure" ]
          },

          "Install" : {
            "packages" : {
              "yum" : {
                "docker"    : []
              }
            },

            "services" : {
              "sysvinit" : {  
                "docker"  : { "enabled" : "true", "ensureRunning" : "true" }
              }
            }
          },

          "Configure" : {
            "commands" : {
              "01_docker_pull" : {
								"command" : "docker pull nginx"
							},
							"02_docker_run_nginx" : {
								"command" : "docker run -d -p 80:80 nginx"
							}
            }
          }
        }
      },
      "Properties": {
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] },
        "InstanceType"   : { "Ref" : "InstanceType" },
        "SecurityGroupIds" : [ {"Ref" : "WebServerSecurityGroup"} ],
				"SubnetId": {"Ref": "WebServerSubnet"},
        "KeyName"        : { "Ref" : "KeyName" },
        "UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
             "#!/bin/bash -xe\n",
             "yum update -y aws-cfn-bootstrap\n",

             "# Install the files and packages from the metadata\n",
             "/opt/aws/bin/cfn-init -v ",
             "         --stack ", { "Ref" : "AWS::StackName" },
             "         --resource WebServerInstance ",
             "         --configsets InstallAndRun ",
             "         --region ", { "Ref" : "AWS::Region" }, "\n",

             "# Signal the status from cfn-init\n",
             "/opt/aws/bin/cfn-signal -e $? ",
             "         --stack ", { "Ref" : "AWS::StackName" },
             "         --resource WebServerInstance ",
             "         --region ", { "Ref" : "AWS::Region" }, "\n"
        ]]}}        
      }
    },
    
		"WebServerVPC": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"CidrBlock": "10.0.0.0/16",
				"Tags": [
					{"Key": "Name", "Value": "WebServerVPC"}
				]
			}
		},

		"WebServerSubnet": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"CidrBlock": "10.0.0.1/24",
				"Tags": [
					{ "Key": "Name", "Value": "WebServerSubnet" }
				],
				"VpcId": { "Ref": "WebServerVPC" }
			}
		},

		"WebServerGateway": {
			"Type": "AWS::EC2::InternetGateway",
			"Properties": {
				"Tags": [
					{"Key": "Name", "Value": "WebServerGateway"}
				]
			}
		},

		"WebServerGatewayAttachment": {
			"Type": "AWS::EC2::VPCGatewayAttachment",
			"Properties": {
				"InternetGatewayId": {"Ref": "WebServerGateway"},
				"VpcId": {"Ref": "WebServerVPC"}
			}
		},

    "WebServerSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Enable HTTP and SSH access",
        "SecurityGroupIngress" : [
          {"IpProtocol" : "tcp", "FromPort" : "80", "ToPort" : "80", "CidrIp" : {"Ref" : "HTTPLocation"}},
          {"IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : { "Ref" : "SSHLocation"}}
        ],
				"Tags": [
					{"Key": "Name", "Value": "WebServerSecurityGroup"}
				],
				"VpcId": {"Ref": "WebServerVPC"}
      }
    },    
		"WebServerEIP" : {
			"Type": "AWS::EC2::EIP",
			"DependsOn": "WebServerGatewayAttachment",
			"Properties": {
				"InstanceId": {"Ref": "WebServerInstance"}
			}
		}
  },
  
  "Outputs" : {
    "WebsiteURL" : {
      "Description" : "URL for newly created Docker instance",
      "Value" : { "Fn::Join" : ["", ["http://", { "Fn::GetAtt" : [ "WebServerInstance", "PublicDnsName" ]}]] }
    }
  }
